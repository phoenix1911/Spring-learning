<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd"

          >
<!--构造器注入有两种形式,一个是根据参数类型,一个是根据参数位置下标-->
	<bean name="student1" class="bean.Student">
		<constructor-arg type="long" value="12"/>
		<constructor-arg type="java.lang.String" value="zs"/>
		<constructor-arg type="int" value="10"/>
	</bean>
	<bean name="student2" class="bean.Student">
		<constructor-arg index="0" value="103"/>
		<constructor-arg index="1" value="李四"/>
		<constructor-arg index="2" value="15"/>
	</bean>

    
    
</beans>